<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.options_micropost_size),
                                                                                micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <div>
    <%= micropost.content %>
  </div>
  <span class="content">
    <% micropost.images.each do |photo| %>
      <%= image_tag micropost.display_image(photo) %>
    <% end %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t ".ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete"), micropost, method: :delete,
                                       data: { confirm: t(".you_sure") }%>
    <% end %>
  </span>
</li>
